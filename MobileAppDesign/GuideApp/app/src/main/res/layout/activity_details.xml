<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Details.DetailsActivity">

    <!-- Top bar -->
    <RelativeLayout
        android:id="@+id/details_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_bar"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back_details"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_fab"
            android:contentDescription="@string/cd_back"
            android:src="@drawable/ic_back"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/details_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_back_details"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter"
            android:text="@string/details_title"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Scroll content -->
    <ScrollView
        android:id="@+id/details_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/details_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hero image -->
            <ImageView
                android:id="@+id/details_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/cd_details_image"
                android:scaleType="centerCrop"
                android:src="@drawable/boyana_waterfall"
                android:background="@drawable/bg_hero_rounded" />

            <!-- Place name -->
            <TextView
                android:id="@+id/details_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/inter"
                android:text="@string/sample_place_name"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Location subtitle -->
            <TextView
                android:id="@+id/details_place_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/inter"
                android:text="@string/sample_place_location"
                android:textColor="@color/textSecondary" />

            <!-- Quick stats card -->
            <LinearLayout
                android:id="@+id/details_stats_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_bottom_card"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/details_quick_info"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <!-- TableLayout -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/inter"
                            android:text="@string/details_stat_distance_label"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:fontFamily="@font/inter"
                            android:text="@string/details_stat_distance_value"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/inter"
                            android:text="@string/details_stat_time_label"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:fontFamily="@font/inter"
                            android:text="@string/details_stat_time_value"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/inter"
                            android:text="@string/details_stat_difficulty_label"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:fontFamily="@font/inter"
                            android:text="@string/details_stat_difficulty_value"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/inter"
                            android:text="@string/details_stat_elevation_label"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:fontFamily="@font/inter"
                            android:text="@string/details_stat_elevation_value"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <!-- Description card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_bottom_card"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/details_description_title"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/details_description_body"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>

            <!-- Action buttons -->
            <Button
                android:id="@+id/btn_show_on_map"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:backgroundTint="@color/accent"
                android:text="@string/details_show_on_map"
                android:textAllCaps="false"
                android:textColor="@color/textPrimary" />

            <Button
                android:id="@+id/btn_add_favorite"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/surface"
                android:text="@string/details_add_favorite"
                android:textAllCaps="false"
                android:textColor="@color/primary" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>