<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Map.NearMeMapActivity">

    <!-- Map layer (FrameLayout so we can overlay pins later if we want) -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Fake map image (replace with your own drawable) -->
        <ImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_map"
            android:scaleType="centerCrop"
            android:src="@drawable/boyana_waterfall" />

    </FrameLayout>

    <!-- Top bar with Back button (replaces the old TextView top bar) -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_bar"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_fab"
            android:contentDescription="@string/cd_back"
            android:src="@drawable/ic_back"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter"
            android:text="@string/map_title"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Filter button (top-right) -->
    <ImageButton
        android:id="@+id/btn_filter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_fab"
        android:contentDescription="@string/cd_filter"
        android:src="@drawable/ic_filter"
        app:tint="@color/primary" />

    <!-- My location button (below filter) -->
    <ImageButton
        android:id="@+id/btn_my_location"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/btn_filter"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_fab"
        android:contentDescription="@string/cd_my_location"
        android:src="@drawable/ic_my_location"
        app:tint="@color/primary" />

    <!-- Bottom info card -->
    <LinearLayout
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_bottom_card"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/sample_place_name"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/place_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter"
            android:text="@string/sample_place_meta"
            android:textColor="@color/textSecondary" />

        <Button
            android:id="@+id/btn_view_details"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/accent"
            android:text="@string/view_details"
            android:textAllCaps="false"
            android:textColor="@color/textPrimary" />
    </LinearLayout>

</RelativeLayout>