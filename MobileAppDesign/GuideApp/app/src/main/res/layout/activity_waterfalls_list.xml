<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".List.WaterfallsListActivity">

    <!-- Top bar -->
    <RelativeLayout
        android:id="@+id/list_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_bar"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btn_back_list"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_fab"
            android:contentDescription="@string/cd_back"
            android:src="@drawable/ic_back"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_back_list"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter"
            android:text="@string/list_waterfalls_title"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Filters card (TableLayout requirement) -->
    <LinearLayout
        android:id="@+id/filters_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_bottom_card"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/filters_title"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:fontFamily="@font/inter"
                    android:text="@string/filter_distance"
                    android:textColor="@color/textSecondary" />

                <Button
                    android:id="@+id/btn_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/surface"
                    android:text="@string/filter_distance_value"
                    android:textAllCaps="false"
                    android:textColor="@color/primary" />
            </TableRow>

            <TableRow>
                <TextView
                    android:fontFamily="@font/inter"
                    android:text="@string/filter_difficulty"
                    android:textColor="@color/textSecondary" />

                <Button
                    android:id="@+id/btn_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/surface"
                    android:text="@string/filter_difficulty_value"
                    android:textAllCaps="false"
                    android:textColor="@color/primary" />
            </TableRow>

            <TableRow>
                <TextView
                    android:fontFamily="@font/inter"
                    android:text="@string/filter_time"
                    android:textColor="@color/textSecondary" />

                <Button
                    android:id="@+id/btn_time"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/surface"
                    android:text="@string/filter_time_value"
                    android:textAllCaps="false"
                    android:textColor="@color/primary" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <!-- Results title -->
    <TextView
        android:id="@+id/results_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/inter"
        android:text="@string/results_title"
        android:textColor="@color/textPrimary"
        android:textStyle="bold" />

    <!-- List results -->
    <ScrollView
        android:id="@+id/results_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/results_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="16dp">

            <!-- Item 1: Boyana (clickable) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_boyana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_bottom_card"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/boyana_img"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/cd_place_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boyana_waterfall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/boyana_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/boyana_name"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/boyana_img"
                    app:layout_constraintTop_toTopOf="@id/boyana_img"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/boyana_meta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/boyana_meta"
                    android:textColor="@color/textSecondary"
                    app:layout_constraintStart_toEndOf="@id/boyana_img"
                    app:layout_constraintTop_toBottomOf="@id/boyana_name"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:id="@+id/btn_boyana_details"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/accent"
                    android:text="@string/view_details"
                    android:textAllCaps="false"
                    android:textColor="@color/textPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/boyana_img"
                    app:layout_constraintTop_toBottomOf="@id/boyana_meta" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Item 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_krushuna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_bottom_card"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/krushuna_img"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/cd_place_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/waterfall_placeholder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/krushuna_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/krushuna_name"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/krushuna_img"
                    app:layout_constraintTop_toTopOf="@id/krushuna_img"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/krushuna_meta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/krushuna_meta"
                    android:textColor="@color/textSecondary"
                    app:layout_constraintStart_toEndOf="@id/krushuna_img"
                    app:layout_constraintTop_toBottomOf="@id/krushuna_name"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Item 3 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_raiski"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bottom_card"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/raiski_img"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/cd_place_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/waterfall_placeholder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/raiski_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/raiski_name"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/raiski_img"
                    app:layout_constraintTop_toTopOf="@id/raiski_img"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/raiski_meta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/raiski_meta"
                    android:textColor="@color/textSecondary"
                    app:layout_constraintStart_toEndOf="@id/raiski_img"
                    app:layout_constraintTop_toBottomOf="@id/raiski_name"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>